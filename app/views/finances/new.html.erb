<% provide(:title, 'Create New Donation Record') %>
<h1>Create New Donation Record</h1>

<div class="row">
  <div class="span6 offset3">
    <%= simple_form_for (@finance) do |f| %>
	<%= render 'shared/finance_error' %>
      <%= f.input :description %>

      <%= f.input :amount , label: 'Donation Amount' %>

      <%= f.input :date %>

      <%= f.submit 'Create Record', class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>