<% provide(:title, 'Create New Finance Record') %>
<h1>Create New Finance Record</h1>

<div class="row">
  <div class="span6 offset3">
    <%= simple_form_for (@finance) do |f| %>
	<%= render 'shared/finance_error' %>
      <%= f.input :type, collection: ["Donation","Expenses"], :selected => "Donation" %>

      <%= f.input :amount %>

      <%= f.input :date %>

      <%= f.input :description %>

      <%= f.submit 'Create Record', class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>