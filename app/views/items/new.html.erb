<% provide(:title, 'Create New Item') %>
<h1>Create New Item</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= simple_form_for (@item) do |f| %>
	<%= render 'shared/item_error' %>
      <%= f.input :name %>

      <%= f.submit 'Create Item', class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>