<% provide(:title, 'Edit Stock') %>
<h1>Edit Stock</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= simple_form_for (@stock) do |f| %>
  <%= render 'shared/stock_error' %>
  	  <%= f.association :branch, include_blank: false %>
  	  <%= f.association :item, include_blank: false %>
      <%= f.input :count %>

      <%= f.submit 'Save changes', class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>