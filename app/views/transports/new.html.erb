<% provide(:title, 'Create New Transport Provider Details') %>
<h1>Create New Transport Details</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= simple_form_for (@transport) do |f| %>
	<%= render 'shared/transport_error' %>

      <%= f.input :name %>

      <%= f.input :email %>

      <%= f.input :contact_number %>

      <%= f.submit 'Create Details', class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>