<%= bootstrap_form_for [@forum, @topic] do |f| %>
<% if @topic.errors.any? %>
  <% flash.now[:error] = @topic.errors.full_messages.join(', and ') %>
<% end %>
<div class="module">
  <div class="module_header"><%= action_name.humanize %> Topic</div>
    <div class="module_subheader smaller"></div>
    <div class="module_body">
      <div class="fieldset">
        <span><%= f.text_field :title, :size => 75 %></span>
        <div class="clear"></div>
      </div>
      <% unless @topic.id %>
      <div class="fieldset">
        <span>
          <%= f.label :body %>
          <small>(Required)</small>
        </span>
        <span><%= f.cktext_area :body, :cols => 60, :rows => 15 %></span>
        <div class="clear"></div>
      </div>
    </div>
    <% end %>
    <div class="module_footer">
      <div class="fieldset">
        <span><%= f.submit "Submit",:class => 'btn btn-primary' %> or <%= link_to "Cancel", @forum,:class => 'btn btn-primary' %></span>
        <div class="clear"></div>
      </div>
    </div>
</div>
<% end %>